<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/aureum_cream"
    android:padding="24dp">

    <!-- Imagen de billetera -->
    <ImageView
        android:id="@+id/imgWallet"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_wallet" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Ya tienes este registro de deuda en Wallet?"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione un registro para definir su deuda.\nSi no tiene ningún registro, puede crearlo más tarde."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <!-- Botón Sí -->
    <Button
        android:id="@+id/btnSeleccionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SÍ, SELECCIONAR REGISTRO"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:backgroundTint="#C9AA66"
        android:layout_marginBottom="12dp" />

    <!-- Botón No -->
    <TextView
        android:id="@+id/btnOmitir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO, OMITIR"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="4dp" />

</LinearLayout>