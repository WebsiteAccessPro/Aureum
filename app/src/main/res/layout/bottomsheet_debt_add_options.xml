<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTituloModal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elija cómo añadir registro a esta deuda:"
        android:textStyle="bold"
        android:textColor="@color/aureum_text"
        android:textSize="16sp"
        android:paddingBottom="8dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/opSeleccionarRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/aureum_beige">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar registro"
                android:textStyle="bold"
                android:textColor="@color/aureum_text"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="para elegir un registro existente para enlazarlo a la deuda"
                android:textColor="@color/aureum_text"
                android:textSize="13sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/opCrearNuevoRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/aureum_beige">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Nuevo Registro"
                android:textStyle="bold"
                android:textColor="@color/aureum_text"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="para devolver o aumentar la deuda manualmente"
                android:textColor="@color/aureum_text"
                android:textSize="13sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelarModal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CANCELAR"
        android:textStyle="bold"
        app:backgroundTint="@color/aureum_beige"
        android:textColor="@color/aureum_text"
        android:layout_marginTop="10dp"/>

</LinearLayout>