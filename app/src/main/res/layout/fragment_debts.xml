<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aureum_cream">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aureum_cream">

        <TextView
            android:id="@+id/tvTituloDeudas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deudas"
            android:textColor="@color/aureum_text"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/btnBuscarDeuda"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            app:tint="@color/aureum_text"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Tabs -->
    <LinearLayout
        android:id="@+id/layoutTabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:background="@color/aureum_beige"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tabActivo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Activo"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@color/aureum_gold"/>

        <TextView
            android:id="@+id/tabCerrado"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Cerrado"
            android:textColor="@color/aureum_text"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@color/aureum_beige"/>
    </LinearLayout>

    <!-- Scroll contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="100dp">

        <LinearLayout
            android:id="@+id/contentDebts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Prestó -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prestó"
                android:textStyle="bold"
                android:textColor="@color/aureum_text"
                android:textSize="15sp"
                android:paddingTop="8dp"/>

            <View
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_marginBottom="8dp"
                android:background="@color/aureumGoldDark" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/aureumCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_user"
                        android:background="@drawable/bg_circle_beige"
                        android:padding="4dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="**** ME DEBE"
                            android:textStyle="bold"
                            android:textColor="@color/aureumOnCard"
                            android:textSize="13sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teléfono"
                            android:textColor="@color/aureum_text"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PEN +50.00"
                            android:textColor="@color/aureum_green"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoy"
                            android:textColor="@color/aureum_text"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Barra "AÑADE REGISTRO" para Prestó -->
            <LinearLayout
                android:id="@+id/ctaAddPresto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/aureum_beige"
                android:padding="10dp"
                android:gravity="start|center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AÑADE REGISTRO"
                    android:textStyle="bold"
                    android:textColor="@color/aureum_text"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Me prestaron -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Me prestaron"
                android:textStyle="bold"
                android:textColor="@color/aureum_text"
                android:textSize="15sp"
                android:paddingTop="12dp"/>

            <View
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_marginBottom="8dp"
                android:background="@color/aureum_green"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/aureumCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_user"
                        android:background="@drawable/bg_circle_beige"
                        android:padding="4dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEBO *****"
                            android:textStyle="bold"
                            android:textColor="@color/aureumOnCard"
                            android:textSize="13sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alquiler"
                            android:textColor="@color/aureum_text"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PEN -50.00"
                            android:textColor="@color/aureum_red"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoy"
                            android:textColor="@color/aureum_text"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Barra "AÑADE REGISTRO" para Me prestaron -->
            <LinearLayout
                android:id="@+id/ctaAddMePrestaron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/aureum_beige"
                android:padding="10dp"
                android:gravity="start|center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AÑADE REGISTRO"
                    android:textStyle="bold"
                    android:textColor="@color/aureum_text"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Botones flotantes -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutBotonesSecundarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:visibility="gone"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPresto"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Prestó"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center_vertical"
                app:backgroundTint="@color/aureum_red"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_arrow_up"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconTint="@color/white"
                app:iconSize="14dp"
                android:elevation="4dp"
                android:paddingHorizontal="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMePrestaron"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Me prestaron"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                app:backgroundTint="@color/aureum_green"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_arrow_down"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconTint="@color/white"
                app:iconSize="14dp"
                android:elevation="4dp"
                android:paddingHorizontal="16dp" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAgregarDeuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mas"
            app:backgroundTint="@color/aureumGold"
            app:tint="@color/white"
            android:elevation="6dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>