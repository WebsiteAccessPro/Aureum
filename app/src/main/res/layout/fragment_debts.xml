<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aureum_cream">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aureum_cream"
        android:elevation="2dp"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/tvTituloDeudas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deudas"
            android:textColor="@color/aureum_text"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/btnBuscarDeuda"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_search"
            app:tint="@color/aureum_text"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Tabs -->
    <LinearLayout
        android:id="@+id/layoutTabs"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:background="@color/aureum_cream"
        android:orientation="horizontal"
        android:weightSum="2"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:elevation="2dp"
        android:padding="6dp"
        android:gravity="center"
        android:clipToOutline="true"
        android:outlineProvider="background">

        <!-- Pestaña Activa -->
        <TextView
            android:id="@+id/tabActivo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Activo"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/bg_tab_selector2"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:alpha="0.98"
            android:foreground="?attr/selectableItemBackground"/>

        <!-- Pestaña Cerrada -->
        <TextView
            android:id="@+id/tabCerrado"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Cerrado"
            android:textColor="@color/aureum_text"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/bg_tab_selector2"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:foreground="?attr/selectableItemBackground"
            android:alpha="0.98"/>
    </LinearLayout>

    <!-- Scroll contenido -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="0dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/contentDebts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Prestó -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prestó"
                android:textStyle="bold"
                android:textColor="@color/aureum_text"
                android:textSize="15sp"
                android:paddingTop="8dp"/>

            <View
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_marginBottom="8dp"
                android:background="@color/aureumGoldDark" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardEmptyPresto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:background="@color/aureum_beige"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_horizontal">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/circle_bg_icon"
                        android:clipToOutline="true">

                        <ImageView
                            android:id="@+id/icEmptyPresto"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_no_data"
                            app:tint="@color/aureum_text"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvEmptyPresto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aquí aparecerán tus deudas de Prestó"
                        android:textColor="@color/aureum_text"
                        android:textSize="14sp"
                        android:alpha="0.7"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDeudasPresto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:paddingBottom="8dp" />

            <!-- Me prestaron -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Me prestaron"
                android:textStyle="bold"
                android:textColor="@color/aureum_text"
                android:textSize="15sp"
                android:paddingTop="12dp"/>

            <View
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_marginBottom="8dp"
                android:background="@color/aureum_green"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardEmptyMePrestaron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:background="@color/aureum_beige"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_horizontal">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/circle_bg_icon"
                        android:clipToOutline="true">

                        <ImageView
                            android:id="@+id/icEmptyMePrestaron"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_no_data"
                            app:tint="@color/aureum_text"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvEmptyMePrestaron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aquí aparecerán tus deudas de Me prestaron"
                        android:textColor="@color/aureum_text"
                        android:textSize="14sp"
                        android:alpha="0.7"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDeudasMePrestaron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:paddingBottom="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botones flotantes -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/layoutBotonesSecundarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="100dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPresto"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Prestó"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center_vertical"
                app:backgroundTint="@color/aureum_red"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_arrow_up"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconTint="@color/white"
                app:iconSize="14dp"
                android:elevation="4dp"
                android:paddingHorizontal="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMePrestaron"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Me prestaron"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                app:backgroundTint="@color/aureum_green"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_arrow_down"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconTint="@color/white"
                app:iconSize="14dp"
                android:elevation="4dp"
                android:paddingHorizontal="16dp" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAgregarDeuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="40dp"
            app:srcCompat="@drawable/ic_add_plus"
            app:backgroundTint="@color/aureum_gold"
            android:elevation="6dp" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
