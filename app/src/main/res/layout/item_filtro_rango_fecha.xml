<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="4dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFechaInicio"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:text="21/10/2025"
        android:backgroundTint="@color/aureum_beige"
        app:strokeColor="@color/aureum_gold"
        app:strokeWidth="1dp"
        app:cornerRadius="22dp"
        android:elevation="4dp"
        app:icon="@drawable/ic_calendar_24"
        app:iconGravity="textStart"
        app:iconPadding="6dp"
        app:iconTint="@color/aureum_text"
        app:rippleColor="@color/aureum_gold"
        android:textColor="@color/aureum_text"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/black"
        android:layout_marginHorizontal="8dp"
        android:textSize="18sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFechaFin"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:text="Hoy"
        android:backgroundTint="@color/aureum_beige"
        app:strokeColor="@color/aureum_gold"
        app:strokeWidth="1dp"
        app:cornerRadius="22dp"
        android:elevation="4dp"
        app:icon="@drawable/ic_calendar_24"
        app:iconGravity="textStart"
        app:iconPadding="6dp"
        app:iconTint="@color/aureum_text"
        app:rippleColor="@color/aureum_gold"
        android:textColor="@color/aureum_text"
        android:textSize="13sp" />
</LinearLayout>
