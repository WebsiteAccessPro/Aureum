<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:cardElevation="3dp"
        app:strokeColor="@color/aureum_border"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/aureumCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgCategoria"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle_beige"
                    android:padding="10dp"
                    android:src="@drawable/registro"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvTituloRegistro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registro"
                        android:textStyle="bold"
                        android:textColor="@color/aureum_text"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/tvTipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo"
                        android:textColor="@color/aureum_text"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_chip_gold"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/aureum_border" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuentas"
                        android:textColor="@color/aureum_gold_dark"
                        android:textStyle="bold"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/tvCuentas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cuenta"
                        android:textColor="@color/aureum_text"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nota"
                        android:textColor="@color/aureum_gold_dark"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvNota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/aureum_text"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monto"
                        android:textColor="@color/aureum_gold_dark"
                        android:textStyle="bold"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/tvMonto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PEN +0.00"
                        android:textColor="@color/aureum_text"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_biometric_pill"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saldo"
                        android:textColor="@color/aureum_gold_dark"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvSaldoPosterior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saldo posterior"
                        android:textColor="@color/aureum_gray"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha"
                        android:textColor="@color/aureum_gold_dark"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvFecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hoy"
                        android:textColor="@color/aureum_text"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/btnEliminarRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_biometric_pill"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Eliminar"
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnCerrarDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_biometric_pill"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Cerrar"
            android:textColor="@color/aureum_text"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>