<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="5dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/aureum_beige"
    app:cardBackgroundColor="@color/aureumCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cabecera -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="18dp"
            android:paddingVertical="14dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless">

            <!-- Icono circular -->
            <ImageView
                android:id="@+id/imgIcono"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_user"
                android:background="@drawable/bg_circle_beige"
                android:padding="6dp"
                android:elevation="2dp"
                android:contentDescription="@string/app_name" />

            <!-- Texto principal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/tvTituloDeuda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="**** ME DEBE"
                    android:textStyle="bold"
                    android:textColor="@color/aureumOnCard"
                    android:textSize="15sp"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:id="@+id/tvCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BCP"
                    android:textColor="@color/aureum_text"
                    android:textSize="13sp"
                    android:alpha="0.85"
                    android:layout_marginTop="2dp"
                    android:lineSpacingExtra="1dp" />

                <TextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción o nota larga sin recorte visual para que se lea completa"
                    android:textColor="@color/aureum_text"
                    android:textSize="12sp"
                    android:alpha="0.8"
                    android:layout_marginTop="2dp"
                    android:lineSpacingExtra="1dp" />
            </LinearLayout>

            <!-- Monto y fecha -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="end|center_vertical"
                android:minWidth="90dp">

                <TextView
                    android:id="@+id/tvMonto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PEN +50.00"
                    android:textColor="@color/aureum_green"
                    android:textStyle="bold"
                    android:textSize="14.5sp"
                    android:letterSpacing="0.02"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoy"
                    android:textColor="@color/aureum_text"
                    android:textSize="12sp"
                    android:alpha="0.8" />
            </LinearLayout>
        </LinearLayout>

        <!-- Línea divisoria -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1FA8A48A" />

        <!-- Sección Añadir registro -->
        <LinearLayout
            android:id="@+id/ctaAddRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_add_registro_ripple"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:gravity="start|center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/mas"
                app:tint="@color/aureum_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="AÑADIR REGISTRO"
                android:textStyle="bold"
                android:textColor="@color/aureum_text"
                android:textSize="13.5sp"
                android:letterSpacing="0.02" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
