<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/aureumCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgIconoCuenta"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_bank"
            android:background="@drawable/bg_circle_beige"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/aureumOnCard" />

            <TextView
                android:id="@+id/tvNumeroCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000 0000 0000"
                android:textSize="13sp"
                android:textColor="@color/aureum_text"
                android:alpha="0.8" />

            <TextView
                android:id="@+id/tvTipoCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textSize="13sp"
                android:textColor="@color/aureum_text"
                android:alpha="0.8" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#1FA8A48A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Moneda"
            android:textStyle="bold"
            android:textColor="@color/aureum_text" />

        <TextView
            android:id="@+id/tvMonedaCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PEN"
            android:textColor="@color/aureum_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Saldo"
            android:textStyle="bold"
            android:textColor="@color/aureum_text" />

        <TextView
            android:id="@+id/tvSaldoCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PEN 0.00"
            android:textStyle="bold"
            android:textColor="@color/aureumOnCard" />
    </LinearLayout>

    <TextView
        android:id="@+id/btnCerrarDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_chip"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Cerrar"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>