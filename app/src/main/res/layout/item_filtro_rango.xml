<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="4dp"
    android:layout_marginBottom="0dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn7Dias"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginHorizontal="6dp"
        android:backgroundTint="@color/aureum_beige"
        app:strokeColor="@color/aureum_gold"
        app:strokeWidth="1dp"
        app:cornerRadius="22dp"
        android:elevation="4dp"
        app:icon="@drawable/ic_calendar_24"
        app:iconGravity="textStart"
        app:iconPadding="6dp"
        app:iconTint="@color/aureum_text"
        app:rippleColor="@color/aureum_gold"
        android:text="7Días"
        android:textColor="@color/aureum_text"
        android:textSize="13sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn30Dias"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:text="30Días"
        android:backgroundTint="@color/aureum_beige"
        app:strokeColor="@color/aureum_gold"
        app:strokeWidth="1dp"
        app:cornerRadius="22dp"
        android:elevation="4dp"
        app:icon="@drawable/ic_calendar_24"
        app:iconGravity="textStart"
        app:iconPadding="6dp"
        app:iconTint="@color/aureum_text"
        app:rippleColor="@color/aureum_gold"
        android:textColor="@color/aureum_text"
        android:textSize="13sp"
        android:layout_marginHorizontal="6dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn6Meses"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:text="6Meses"
        android:backgroundTint="@color/aureum_beige"
        app:strokeColor="@color/aureum_gold"
        app:strokeWidth="1dp"
        app:cornerRadius="22dp"
        android:elevation="4dp"
        app:icon="@drawable/ic_calendar_24"
        app:iconGravity="textStart"
        app:iconPadding="6dp"
        app:iconTint="@color/aureum_text"
        app:rippleColor="@color/aureum_gold"
        android:textColor="@color/aureum_text"
        android:textSize="13sp"
        android:layout_marginHorizontal="6dp"/>

</LinearLayout>
