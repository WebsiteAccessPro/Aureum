<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aureum_cream">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aureum_gold"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarRegistroIngreso"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingHorizontal="12dp"
            app:title="Registro de Ingreso"
            app:titleTextColor="@color/aureum_text"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_close_small"
            app:menu="@menu/menu_guardar_cuenta"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD PRINCIPAL (solo campos) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/aureum_beige"
                app:cardBackgroundColor="@color/aureumCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Datos del Ingreso"
                        android:textStyle="bold"
                        android:textColor="@color/aureum_text"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Completa los datos para registrar un ingreso"
                        android:textColor="@color/aureum_text"
                        android:alpha="0.85"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Nota -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxStrokeColor="@color/aureum_gold"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNota"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:hint="Nota o descripciÃ³n"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:gravity="center_vertical|start"
                            android:textColor="@color/aureum_text"
                            android:textColorHint="@color/aureum_gold"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Pagador -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Pagador"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/aureum_gold"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPagador"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textColor="@color/aureum_text"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Fecha y Hora -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Fecha -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Fecha"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/aureum_gold"
                            app:endIconMode="dropdown_menu">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/etFecha"
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                android:focusable="false"
                                android:paddingStart="12dp"
                                android:paddingTop="12dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/aureum_text"
                                android:textSize="14sp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="wrap_content"/>

                        <!-- Hora -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Hora"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/aureum_gold"
                            app:endIconMode="dropdown_menu">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/etHora"
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                android:focusable="false"
                                android:paddingStart="12dp"
                                android:paddingTop="12dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/aureum_text"
                                android:textSize="14sp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Forma de pago -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Forma de pago"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/aureum_gold"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconMode="dropdown_menu">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/spFormaPago"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:paddingStart="12dp"
                            android:paddingTop="12dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/aureum_text"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Estado -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Estado"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/aureum_gold"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconMode="dropdown_menu">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/spEstado"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:paddingStart="12dp"
                            android:paddingTop="12dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/aureum_text"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- ðŸ”¹ CONSEJO (Fuera del card) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:background="@drawable/bg_campo_cuenta">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consejo"
                    android:textStyle="bold"
                    android:textColor="@color/aureum_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="â€¢ Registra ingresos con descripciÃ³n clara\nâ€¢ Verifica fecha y forma de pago\nâ€¢ Guarda para actualizar tu saldo"
                    android:textColor="@color/aureum_text"
                    android:alpha="0.9"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>