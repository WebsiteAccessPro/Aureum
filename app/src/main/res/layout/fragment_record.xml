<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aureum_cream"
    tools:context=".controller.fragments.RecordFragment">

    <!-- Contenido principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- T칤tulo -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registros"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" />

        <!-- Bot칩n b칰squeda -->
        <ImageView
            android:id="@+id/btnBuscar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            app:tint="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp" />

        <!-- Resumen -->
        <LinearLayout
            android:id="@+id/layoutResumen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvResumenPeriodo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="칔ltimos 30 D칤as"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvResumenMonto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. PEN 100.00"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSemanaActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="SEMANA 41"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvSaldoTotalAcumulado"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Saldo PEN 260.00"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvSaldoSemanaActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PEN 50.00"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Lista de registros -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRegistros"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/layoutResumen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNuevoRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="A침adir registro"
            android:tint="@color/aureum_text"
            app:backgroundTint="@color/aureum_gold"
            app:srcCompat="@drawable/mas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="125dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 游댷 PANEL INFERIOR DESLIZABLE -->
    <FrameLayout
        android:id="@+id/layoutFiltros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aureum_beige"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="30dp">

            <!-- Flechita superior -->
            <View
                android:id="@+id/handleFiltros"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="@color/black"
                android:alpha="0.25"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- 游빐 ViewPager (filtros deslizables) -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerFiltros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_gravity="center"
                android:paddingBottom="0dp"
                android:layout_marginBottom="0dp"/>

            <!-- 游댯 Indicadores (3 puntitos centrados) -->
            <LinearLayout
                android:id="@+id/layoutIndicadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:id="@+id/dot1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/dot_active" />

                <ImageView
                    android:id="@+id/dot2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/dot_inactive" />

                <ImageView
                    android:id="@+id/dot3"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/dot_inactive" />
            </LinearLayout>

            <!-- 游댳 Selector de cuentas (solo visible al expandir) -->
            <LinearLayout
                android:id="@+id/layoutCuentas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <!-- Label + Caja clickeable (reemplaza Spinner) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="Cuentas"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp" />

                    <!-- 游녤 Campo de selecci칩n visualmente mejorado -->
                    <TextView
                        android:id="@+id/tvCuentaSeleccionada"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:text="Todas"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:background="@drawable/bg_campo_cuenta"
                        android:elevation="2dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- Bot칩n reset de filtros a la derecha -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResetFiltros"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="12dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
