<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aureum_cream"
    tools:context=".controller.fragments.RecordFragment">

    <!-- Contenido principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registros"
            android:textColor="@color/aureum_text"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/btnBuscar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            app:tint="@color/aureum_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Buscar" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutResumen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/aureum_border"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/aureumCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvResumenPeriodo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Ãšltimos 30 DÃ­as"
                        android:textColor="@color/aureum_text"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvResumenMonto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PEN 0.00"
                        android:textColor="@color/aureum_text"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvSemanaActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="SEMANA -"
                    android:textColor="@color/aureum_gray"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvSaldoTotalAcumulado"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Saldo PEN 0.00"
                        android:textColor="@color/aureum_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvSaldoSemanaActual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PEN 0.00"
                        android:textColor="@color/aureum_text"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Lista de registros -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRegistros"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:paddingBottom="6dp"
            app:layout_constraintTop_toBottomOf="@id/layoutResumen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNuevoRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="AÃ±adir registro"
            android:tint="@color/aureum_text"
            app:backgroundTint="@color/aureum_gold"
            app:srcCompat="@drawable/ic_add_plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="125dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ðŸ”½ PANEL INFERIOR DESLIZABLE -->
    <FrameLayout
        android:id="@+id/layoutFiltros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aureum_beige"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="30dp">

            <!-- Flechita superior -->
            <View
                android:id="@+id/handleFiltros"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="@color/black"
                android:alpha="0.25"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- ðŸ§­ ViewPager (filtros deslizables) -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerFiltros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_gravity="center"
                android:paddingBottom="0dp"
                android:layout_marginBottom="0dp"/>

            <!-- ðŸ”µ Indicadores (3 puntitos centrados) -->
            <LinearLayout
                android:id="@+id/layoutIndicadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:id="@+id/dot1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/dot_active" />

                <ImageView
                    android:id="@+id/dot2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/dot_inactive" />

                <ImageView
                    android:id="@+id/dot3"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/dot_inactive" />
            </LinearLayout>

            <!-- ðŸ”¹ Selector de cuentas (solo visible al expandir) -->
            <LinearLayout
                android:id="@+id/layoutCuentas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <!-- Label + Caja clickeable (reemplaza Spinner) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="Cuentas"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvCuentaSeleccionada"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Todas"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:background="@drawable/bg_campo_cuenta"
                        android:elevation="2dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- BotÃ³n reset de filtros a la derecha -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResetFiltros"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Reset"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="@color/aureum_text"
                    android:layout_marginStart="12dp"
                    android:backgroundTint="@color/aureum_beige"
                    app:strokeColor="@color/aureum_gold"
                    app:strokeWidth="1dp"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/reset"
                    app:iconTint="@color/aureum_text"
                    app:iconPadding="6dp"
                    app:iconSize="16dp"
                    app:iconGravity="textStart" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
