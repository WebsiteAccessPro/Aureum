<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="4dp">

    <Spinner
        android:id="@+id/spinnerFiltroTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/opciones_tiempo"
        android:spinnerMode="dropdown"
        android:background="@drawable/bg_campo_cuenta"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:minHeight="40dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnIrCalendario"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:text="Calendario"
        android:backgroundTint="@color/aureum_beige"
        app:strokeColor="@color/aureum_gold"
        app:strokeWidth="1dp"
        app:cornerRadius="22dp"
        android:elevation="4dp"
        app:icon="@drawable/ic_calendar_24"
        app:iconGravity="textStart"
        app:iconPadding="6dp"
        app:iconTint="@color/aureum_text"
        app:rippleColor="@color/aureum_gold"
        android:textColor="@color/aureum_text"
        android:textSize="13sp"
        android:layout_marginStart="8dp" />

</LinearLayout>
