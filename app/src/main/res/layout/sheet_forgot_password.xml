<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/aureum_cream">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:backgroundTint="@android:color/white"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        app:strokeColor="@color/aureum_gold"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvTitleForgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recuperar acceso"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/aureum_text"
                android:gravity="center"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tvSubtitleForgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa tu correo y te enviaremos un enlace de restablecimiento"
                android:textSize="13sp"
                android:textColor="#8A8A8A"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forgotEmailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                app:startIconDrawable="@drawable/ic_mail_24"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxStrokeColor="@color/aureum_text"
                app:boxBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/forgotEmailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/aureum_text"
                    android:textColorHint="#9BB3D4"
                    android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar enlace"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/aureum_gold"
                app:cornerRadius="20dp"
                android:minHeight="40dp"
                android:paddingVertical="6dp"
                android:paddingHorizontal="10dp"
                android:elevation="4dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <!-- BOTÓN CANCELAR -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="@color/aureum_text"
                android:gravity="center"
                android:backgroundTint="@android:color/white"
                app:strokeColor="@color/aureum_gold"
                app:strokeWidth="1dp"
                app:cornerRadius="20dp"
                android:minHeight="40dp"
                android:paddingVertical="6dp"
                android:paddingHorizontal="10dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>