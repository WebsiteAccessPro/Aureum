<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5DD"
    android:fitsSystemWindows="true"
    tools:context=".controller.activities.Registro.RegisterActivity">

    <!-- Top bar vacía (espacio superior) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- HEADER (Back + crear cuenta alineado) -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="6dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FILA: botón back + título crear cuenta -->
        <LinearLayout
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoBack"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:gravity="center"
                android:backgroundTint="#FFFFFF"
                app:icon="@drawable/flechaizquierda2"
                app:iconSize="22dp"
                app:iconTint="#000000"
                app:cornerRadius="50dp"
                android:elevation="2dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvTitleRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear cuenta"
                android:textColor="#3B2E10"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- SUBTÍTULO (debajo del título como estaba antes) -->
        <TextView
            android:id="@+id/tvSubtitleRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Únete a la comunidad financiera"
            android:textColor="#6D5B2A"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- STEPPER CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/stepperCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:padding="6dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/stepIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <!-- Step 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="6dp">

                <FrameLayout
                    android:layout_width="26dp"
                    android:layout_height="26dp">

                    <View
                        android:id="@+id/step1Circle"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/circle_step_active" />

                    <TextView
                        android:id="@+id/step1Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_gravity="center" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuenta"
                    android:textSize="10sp"
                    android:textColor="#5B4E2D"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Conector 1 -->
            <View
                android:id="@+id/connector1"
                android:layout_width="38dp"
                android:layout_height="2dp"
                android:background="#E0E0E0"
                android:layout_marginHorizontal="4dp" />

            <!-- Step 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="6dp">

                <FrameLayout
                    android:layout_width="26dp"
                    android:layout_height="26dp">

                    <View
                        android:id="@+id/step2Circle"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/circle_step_inactive" />

                    <TextView
                        android:id="@+id/step2Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_gravity="center" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal"
                    android:textSize="10sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Conector 2 -->
            <View
                android:id="@+id/connector2"
                android:layout_width="38dp"
                android:layout_height="2dp"
                android:background="#E0E0E0"
                android:layout_marginHorizontal="4dp" />

            <!-- Step 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="6dp">

                <FrameLayout
                    android:layout_width="26dp"
                    android:layout_height="26dp">

                    <View
                        android:id="@+id/step3Circle"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/circle_step_inactive" />

                    <TextView
                        android:id="@+id/step3Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_gravity="center" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmar"
                    android:textSize="10sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ViewPager (responsivo) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/stepperCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
