<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/aureum_gold" /> <!-- color dorado al presionar -->
            <corners android:radius="100dp" /> <!-- esquinas redondeadas -->
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/aureum_text" /> <!-- color base oscuro -->
            <corners android:radius="100dp" />
        </shape>
    </item>

</selector>
