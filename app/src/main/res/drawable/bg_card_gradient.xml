<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra difusa -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="16dp"/>
            <padding android:left="0dp" android:top="2dp" android:right="0dp" android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Degradado principal -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFF9F7F2"
                android:endColor="#FFF4F0E6"
                android:angle="270"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

</layer-list>