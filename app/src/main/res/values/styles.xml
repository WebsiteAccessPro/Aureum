<resources>
    <!-- Botón “outlined” crema con borde dorado -->
    <style name="AureumCalcButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">44dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="strokeColor">@color/aureum_gold</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/aureum_text</item>
        <item name="backgroundTint">@color/aureum_cream</item>
        <item name="rippleColor">@color/aureum_gold_20</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Botón primario dorado -->
    <style name="AureumCalcButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">44dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="backgroundTint">@color/aureum_gold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@color/aureum_gold_dark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CalcBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_calc_button</item>
    </style>



    <style name="PlainButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Texto activo del BottomNav -->
    <style name="BottomNavTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/aureum_gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <!-- Texto inactivo del BottomNav -->
    <style name="BottomNavTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/aureum_gray</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

</resources>
